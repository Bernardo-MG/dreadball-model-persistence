      <!-- Dependencies versions -->
      <guava.version>18.0</guava.version>
      <h2.version>1.4.190</h2.version>
      <hibernate.version>5.0.2.Final</hibernate.version>
      <hibernate.jpa2.version>1.0.0.Final</hibernate.jpa2.version>
      <hikari.version>2.3.12</hikari.version>
      <log4j.version>2.4.1</log4j.version>
      <mockito.version>1.10.19</mockito.version>
      <spring.version>4.2.3.RELEASE</spring.version>
      <spring.data.version>1.11.1.RELEASE</spring.data.version>
      <spring.jpa.version>1.9.1.RELEASE</spring.jpa.version>
      <tabletop.dreadball.model.api.version>0.4.0</tabletop.dreadball.model.api.version>
      <testng.version>6.9.6</testng.version>
      <wandrell.persistence.version>0.1.6</wandrell.persistence.version>
      <!-- Plugins versions -->
      <plugin.changes.version>2.11</plugin.changes.version>
      <plugin.site.velocity.version>1.7</plugin.site.velocity.version>
      <!-- Maven Site -->
      <site.skin.version>0.3.0</site.skin.version>
      <bintrayURL>https://bintray.com/bernardo-mg/tabletop-toolkits/dreadball-model-persistence/view</bintrayURL>
      <mavenURL>http://mvnrepository.com/artifact/com.wandrell.tabletop.dreadball/dreadball-model-persistence</mavenURL>
